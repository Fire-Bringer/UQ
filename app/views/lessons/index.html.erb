<h1 class="your-lessons">My Lessons</h1>

<div class="row row-cols-1 row-cols-md-3 g-4 index-container">


  <div class="col container-card">
    <% @lessons.each do |lesson| %>
          <div class="content-card">
              <button type="button" class="btn today btn-secondary rounded-pill">Today</button>
        <%= link_to lesson_path(lesson) + "?query=visual" do %>
          <%= image_tag "lessons/lesson1.jpg", class: "lesson-img" %>
            <div class="body-card body-card-from-2nd">
              <h5 class="lesson-name"><%= lesson.title %></h5>
            </div>
        <% end %>
        <!-- Three dots dropdown container -->
        <div class="dropdown-container">
          <!-- Three dots icon (you can replace this with your own icon) -->
          <div class="dropdown-icon" onclick="toggleDropdown(this)">&#8226;&#8226;&#8226;</div>
          <!-- Dropdown content (Edit and Copy Link) -->
          <div class="dropdown-content">
            <span class="dropdown-item">Edit</span>
            <span class="dropdown-item">delete</span>
            <span class="dropdown-item">Copy Link</span>
          </div>
        </div>
      </div>
    <% end %>
