<div class="sound-container">
  <div class="sound-card">
    <% if @supplementaryAural&.files&.attached? %>
      <% @supplementaryAural.files.each do |audio| %>
        <%= cl_video_tag audio.key, controls:"", class:"sound-bar" %>
      <% end %>
    <% else %>
      <p>No aural supplementary aids are available for this lesson.</p>
    <% end %>
  </div>
</div>
