<h1 class="header"><%= @lesson.title %></h2>

<br>

<div class="container d-flex flex-row-reverse">
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" id="myTabs">
    <li class="nav-item ">
      <a class="nav-link active" id="tab1-tab" data-toggle="tab" href="#tab1"><%= image_tag "visual_icon.jpg", class: "filter-icons" %></i></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="tab2-tab" data-toggle="tab" href="#tab2"><%= image_tag "audio_icon.jpg", class: "filter-icons" %></i></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="tab3-tab" data-toggle="tab" href="#tab3"><%= image_tag "reading_icon.jpg", class: "filter-icons" %></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="tab4-tab" data-toggle="tab" href="#tab4"><%= image_tag "video_icon.jpg", class: "filter-icons" %></a>
    </li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div class="tab-pane fade show active" id="tab1">
      <%= render 'visual' %>
    </div>
    <div class="tab-pane fade" id="tab2">
      <%= render 'aural' %>
    </div>
    <div class="tab-pane fade" id="tab3">
      <%= render 'reading' %>
    </div>
    <div class="tab-pane fade" id="tab4">
      <%= render 'kinesthetic' %>
    </div>
  </div>
</div>
