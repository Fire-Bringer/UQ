<div class="reading-container">
  <div class="reading-preview">
    <%= render "reading_content", reading: @reading %>
  </div>
  <div>
    <%= link_to 'Download as PDF', download_pdf_lesson_path(@lesson) %>
  </div>

  <div class="reading-link">
    <% @reading.files.each do |pdf| %>
      <%= image_tag "download_icon2.jpg", class: "download-icon" %>
      <%= link_to pdf.filename, url_for(pdf), class: "message-file" %>
    <% end %>
  </div>
</div>
