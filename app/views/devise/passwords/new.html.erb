<style>
  .custom-card {
      background-color: #2e3c68;/* Use your preferred shade of blue */
  }

  .custom-heading {
    color: #007BFF; /* Use the same blue color for the heading */
  }
</style>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card p-4 custom-card text-light">
        <h2 class="text-center mb-4 custom-heading">Forgot your password?</h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="mb-3">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: 'form-control' },
                        label_html: { class: 'form-label' },
                        wrapper_html: { class: 'mb-3' } %>
          </div>

          <div class="d-grid">
            <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-primary' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
